      .container
        p#title Lucas Patel
        p#subtitle Biology: Bioinformatics at UC San Diego
    .section#filler
      .container.is-fluid
        .box
          article.media
            .media-left
              figure.image.is-64x64
                img(src='https://cdn2.iconfinder.com/data/icons/flat-ui-icons-24-px/24/settings-24-512.png', alt='Image')
